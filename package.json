{
	"name":"test",
	"description": "Best project ever!",
	"main": "lib",
	"version": "0.2.0",
	"homepage": "https://github.com/DoubleDome",
	"author": {
		"name": "Alex Toledo"
	},
    "paths":{
        "source":{
            "project":"<%= data.paths.folder.build %>less/project.less",
            "bootstrap":"<%= data.paths.folder.build %>less/bootstrap.less",
            "bootstrapResponsive":"<%= data.paths.folder.build %>less/responsive.less",
            "css":"<%= data.paths.folder.build %>css/**/*.css",
            "js":"<%= data.paths.folder.build %>lib/**/*.js"
        },
        "folder":{
            "build":"build/",
            "release":"release/",
            "tags":"tags/"
        },
        "output":{
            "project":"<%= data.paths.folder.build %>css/global.css",
            "bootstrap":"<%= data.paths.folder.build %>css/bootstrap.css",
            "bootstrapResponsive":"<%= data.paths.folder.build %>css/bootstrap-responsive.css",
            "tag":"<%= data.paths.folder.tags %>/tag-<%= data.version %>.zip"
        },
        "excludes":[
            "<%= data.paths.folder.release %>test",
            "<%= data.paths.folder.release %>dist",
            "<%= data.paths.folder.release %>*.styl",
            "<%= data.paths.folder.release %>**/*.sass",
            "<%= data.paths.folder.release %>**/less",
            "<%= data.paths.folder.release %>**/*.coffee",
            "<%= data.paths.folder.release %>*.DS_Store"
        ]
    },
    "dependencies":{
       "grunt-recess":"*",
       "grunt-contrib-copy":"*",
       "grunt-contrib-clean":"*",
       "grunt-contrib-compress":"*",
       "grunt-less":"*"
    }

}